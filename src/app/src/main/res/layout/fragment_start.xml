<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".views.startview.StartFragment">
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_margin"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="45sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <Button
            android:drawableLeft="@android:drawable/btn_star"
            android:padding="20sp"
            android:layout_marginStart="@dimen/btn_side_margin"
            android:layout_marginEnd="@dimen/btn_side_margin"
            android:id="@+id/btn_start_game"
            android:theme="@style/MenuButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/start_button_text" />

        <Button
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:padding="20sp"
            android:layout_marginStart="@dimen/btn_side_margin"
            android:layout_marginEnd="@dimen/btn_side_margin"
            android:id="@+id/btn_load_game"
            android:theme="@style/MenuButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/btn_start_game"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/load_button_text" />

        <Button
            android:drawableLeft="@android:drawable/ic_menu_manage"
            android:padding="20sp"
            android:layout_marginStart="@dimen/btn_side_margin"
            android:layout_marginEnd="@dimen/btn_side_margin"
            android:id="@+id/btn_options"
            android:theme="@style/MenuButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/btn_load_game"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/options_button_text" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/loader_container">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/prb_loading_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
            <TextView
                android:layout_gravity="center"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_text"/>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>