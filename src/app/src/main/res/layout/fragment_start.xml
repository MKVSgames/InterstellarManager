<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".views.startview.StartFragment">

    <ProgressBar
        android:id="@+id/prb_loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/start_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/galaxypicture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/small_margin"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="45sp" />

    <Button
        android:padding="20sp"
        android:id="@+id/btn_start_game"
        android:theme="@style/MenuButtonStyle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/start_button_text" />

    <Button
        android:padding="20sp"
        android:id="@+id/btn_load_game"
        android:theme="@style/MenuButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn_start_game"
        android:layout_marginStart="70dp"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/load_button_text" />

    <Button
        android:padding="20sp"
        android:id="@+id/btn_options"
        android:theme="@style/MenuButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn_load_game"
        android:layout_marginStart="70dp"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/options_button_text" />

</RelativeLayout>