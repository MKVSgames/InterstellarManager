<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.start.StartFragment"
    android:id="@+id/container">
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textAlignment="center"
                android:id="@+id/app_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="@string/app_name"
                android:textSize="45sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:drawableLeft="@android:drawable/btn_star"
                android:id="@+id/start_game_btn"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/btn_side_margin"
                android:layout_marginEnd="@dimen/btn_side_margin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/start_button_text"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:theme="@style/SuccessButton"/>

            <Button
                android:drawableLeft="@android:drawable/ic_menu_save"
                android:id="@+id/load_game_btn"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/btn_side_margin"
                android:layout_marginEnd="@dimen/btn_side_margin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/load_button_text"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:theme="@style/DefaultButton"/>

            <Button
                android:drawableLeft="@android:drawable/ic_menu_manage"
                android:id="@+id/options_btn"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/btn_side_margin"
                android:layout_marginEnd="@dimen/btn_side_margin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/option_button_text"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:theme="@style/InfoButton"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>